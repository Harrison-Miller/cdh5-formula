    sls_path: cdh5.pig
  - title: Hive
    description: Hive
    sls_path: cdh5.hive
  - title: Impala
    description: Impala
    sls_path: cdh5.impala

pillar_defaults:
  cdh5:
    version: 5
    landing_page: true
    max_log_index: 1
    namenode:
      start_service: true
    datanode:
      start_service: true
    yarn:
      max_container_size_mb: 11264
    io:
      sort_factor: 25
      sort_mb: 250
    dfs:
      name_dir: /mnt/hadoop/hdfs/nn
      data_dir: /mnt/hadoop/hdfs/data
      permissions: true
    mapred:
      local_dir: /mnt/yarn
      system_dir: /hadoop/system/mapred
      reduce_tasks: 6
    hbase:
      start_service: true
      tmp_dir: /mnt/hbase/tmp
      log_dir: /mnt/hbase/logs
      replication: 3
      master_initial_heap: 1024m
      master_max_heap: 1024m
      master_young_gen: 256m
      region_initial_heap: 1024m
      region_max_heap: 1024m
      region_young_gen: 256m
      jute_maxbuffer: 1000000
      manage_zk: true
    zookeeper:
      data_dir: /mnt/zk/data
      start_service: true
    oozie:
      start_service: true
